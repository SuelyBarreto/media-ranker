<h2>List of Works</h2>

<section class="media-table">
  <h4>Albums</h4>
  <table class="table">
    <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width=100>Published</th>
        <th width=100>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works_albums.each do |work|  %>
        <tr>
          <td><%= work.id %></td>
          <td><%= link_to work.title, work_path(work.id) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication %></td>
          <td><%= link_to "Upvote", upvote_work_path(work.id), class: "btn btn-primary", method: "get" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
