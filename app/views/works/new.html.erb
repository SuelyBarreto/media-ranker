<h2>Add a new work</h2>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section>
  <%= form_for @work do |f| %>

    <div class="form-group">
      <label>Category</label>
      <%= f.select :category, ["album", "book", "movie"], class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Creator</label>
      <%= f.text_field :creator, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Publication year</label>
      <%= f.text_field :publication, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label>Description</label>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit "Create Work", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>
