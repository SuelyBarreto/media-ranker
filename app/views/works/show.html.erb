<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication %></p>
  <p><%= @work.description %></p>
  <section>
    <%= button_to "Back to media ranks", root_path,
        method: "get", class: "btn btn-primary"
    %>
    <%= button_to "Edit", edit_work_path(@work),
        method: "get", class: "btn btn-primary"
    %>
    <%= button_to "Upvote", upvote_work_path(@work),
        method: "get", class: "btn btn-primary"
    %>
    <%= button_to "Delete", work_path(@work),
        method: :delete, class: "btn btn-danger",
        data: {confirm: "Are you sure?"}
    %>
  </section>
</section>

<section class="works-votes__container">
  <h3 class="works-votes__header"><%= @work.votes.count %> Votes for this <%= @work.category.capitalize %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @work.users.each do |vote|  %>
        <% user = User.find_by(id: vote.user_id) %>
        <tr>
          <td><%= link_to user.name, user_path(user.id) %></td> 
          <td><%= vote.voted_on %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>